<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ezd.dao.BrowseDao">

    <!--通过<resultMap>映射实体类属性名和表的字段名对应关系 -->

    <resultMap id="postBrowse" type="PostBrowse">
        <!-- 用id属性来映射主键字段 -->
        <id property="postBrowseId" column="postBrowseId"></id>
        <!-- 用result属性来映射非主键字段 -->
        <association property="users" resultMap="edu.ezd.dao.UsersDao.users"></association>
        <association property="post" resultMap="edu.ezd.dao.ArticleDao.post"></association>

    </resultMap>

</mapper>
